/* __ 物流信息 */
.sec__logistics-info .pro-img{border: 1px solid #e3e3e3;margin-right: 20rpx; height: 80px; width: 80px; position: relative;}
.sec__logistics-info .pro-img image{height: 100%; width: 100%;}
.sec__logistics-info .pro-img .total{background: rgba(0,0,0,.7); color: #fff; font-size: 24rpx; text-align: center; line-height: 40rpx; width: 100%; position: absolute; left: 0; bottom: 0;}
.sec__logistics-info .logistics-info .row{font-size: 30rpx;}
.sec__logistics-info .logistics-info .row:first-child{margin-bottom: 25rpx;}
/* __ 物流进度 */
.sec__logistics-list{border-top: 1rpx solid #e3e3e3;}
.sec__logistics-list .item{padding-left: 80rpx; position: relative;}
.sec__logistics-list .item .icon{height: 100%; width: 80rpx; position: absolute; left: 0; top: 0;}
.sec__logistics-list .item .icon .line{background: #ddd; height: 100%; width: 2rpx; position: absolute; left: 50%; top: 0;}
.sec__logistics-list .item:first-child .icon .line{top: 30rpx;}
.sec__logistics-list .item .icon .dot{background: #ddd;  border: 6rpx solid #fff; border-radius: 50%; transform: translate(-50%,0); height: 24rpx; width: 24rpx; position: absolute; left: 50%; top: 22rpx;}
.sec__logistics-list .item.finish .icon .dot{background: #25ae5f; border-color: #b9e5cc;}
.sec__logistics-list .item .status{border-top: 1rpx solid #e3e3e3; color: #999; font-family: helvetica; padding-left: 0;}
.sec__logistics-list .item:first-child .status{border-top: 0;}
.sec__logistics-list .item.finish .status{color: #25ae5f;}
.sec__logistics-list .item .status .text{font-size: 30rpx; display: block;}
.sec__logistics-list .item .status .time{font-size: 24rpx;}

/* __ 必备按钮 */
.fix-bottom-outer{padding-top: 135rpx;}
.fix-bottom{
  height: 120rpx; width: 100%; position: fixed; left: 0; bottom: 0;
}
.fix-bottom-show{
  background: #fff; border-top: 1rpx solid #f3f3f3; box-sizing: border-box; height: 120rpx; width: 100%;
}
.fix-bottom .ft-btn .btn1{background: #fff; border: 1rpx solid #ccc; border-radius: 8rpx; color:#666; text-align: center; margin-right: 20rpx; padding: 0 35rpx; line-height: 90rpx;}
