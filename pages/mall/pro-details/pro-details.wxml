<!-- 【旅行社-景点商品详情】页面 -->

<view class="body">
  <!-- <>轮播图区域 -->
  <view class="sec__swiper w100">
    <swiper indicator-dots="{{indicatorDots}}" indicator-color="rgba(255,255,255,.5)" indicator-active-color="#fff" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" />
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class="pro-title pad20 bg--fff">
    <view class="flexbox flex-alignb">
      <view class="name flex1">别墅套票-超值礼包【微可牛酒店-翠屏雅苑两卧 三卧+自助早餐+魔术表演（逢周二停演）】</view>
      <label class="num c--999">已售2</label>
    </view>
  </view>

  <view class="pro-subinfo mt20 pad20 bg--fff">
    <view class="flexbox flex-alingc">
      <view class="item"><label class="ico-hotel i1" style="background-image: url(../../../images/icons-hotel.png);"></label><text>使用快递</text></view>
      <view class="item"><label class="ico-hotel i1" style="background-image: url(../../../images/icons-hotel.png);"></label><text>到店自提</text></view>
      <!--蓝色图标
      <view class="col"><label class="ico i1 i1-1" style="background-image: url(../../../images/icons-hotel.png);"></label><text>到店自提</text></view>
      -->
    </view>
  </view>
  <view class="pro-subinfo mt20 pad20 bg--fff">
    <view class="flexbox flex-alingc">
      <view class="item"><label class="ico-hotel i2" style="background-image: url(../../../images/icons-hotel.png);"></label><text>此商品由微可牛酒店提供</text></view>
    </view>
  </view>

  <!-- <>订购须知 -->
  <view class="pro-simliar mt20 pad20 bg--fff">
    <view class="tit">订购须知</view>
    <view class="cnt">
      <view class="row">1、购买成功后联系微信客服或拨打400-0346-999</view>
