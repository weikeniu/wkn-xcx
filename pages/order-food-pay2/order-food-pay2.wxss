.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.textStyle {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.textContainer {
  margin-top: 200px;
}
.top-bar{
  height: 180rpx;
  background: #12b7f5;
  color: #fff;
  justify-content: center
}
.btn1{
  background: #fff;
  color: #999;
  font-size: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  border: 1rpx solid #ccc;
  margin-right: 20rpx;
}
.btn2{
  background: #f40;
