.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.textStyle {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.textContainer {
  margin-top: 200px;
}

.swiper-img.type1 {
  width: 100%;
  height: 360rpx;
  position: relative;
}

.swiper-img image {
  width: 100%;
  height: 100%;
}

.swiper-txt-bar {
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
  padding: 0 20rpx;
}

.swiper-name {
  position: absolute;
  top: 35rpx;
  left: 20rpx;
  color: #fff;
  font-size: 26rpx;
  text-shadow: 1rpx 1rpx 1rpx rgba(0, 0, 0, 0.8);
}

.swiper-num {
  width: 70rpx;
  height: 40rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  right: 0;
  top: 30rpx;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  text-align: center;
  font-size: 20rpx;
  line-height: 40rpx;
}

.get-btn {
  width: 180rpx;
  height: 60rpx;
  background: #f50;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
}

.room-content-head {
  position: relative;
}

.room-content-head:after {
  width: 15rpx;
  height: 15rpx;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  content: " ";
  position: absolute;
  top: 50%;
  right: 20rpx;
  margin-top: -10rpx;
  transform: rotate(135deg);
}

.room-content-head.cur:after {
  transform: rotate(-45deg);
}

.room-img{position: relative;}
.room-img .imgNum{background: rgba(0,0,0,.5); border-radius: 5rpx; color: #fff; font-size: 24rpx; padding: 0 10rpx; line-height: 40rpx; position: absolute; right: 10rpx; bottom: 10rpx;}

.room__nav{padding: 20rpx 20rpx 0;}
.room__item{background: #fff; border: 1rpx solid #e8e8e8; border-radius: 10rpx;}
.room__item .hdTit{border-bottom: 1rpx solid #e8e8e8; padding: 10rpx 20rpx;}
.room-tag label{border: 1rpx solid #12b7f5; color: #12b7f5; border-radius: 5rpx; font-size: 22rpx; margin-top: 10rpx; padding: 0 5rpx;}
.room__item .memType{display: flex; align-items: center; border-bottom: 1rpx solid #e8e8e8; margin: 0 20rpx; padding: 20rpx 0;}
.room__item .memType .td{flex: 1; color: #999; font-size: 24rpx; text-align: center;}

.room-content-slide {
  background: #f3f3f3;
  display: none;
}

.room-content-slide.cur {
  display: block;
}

.room-content-slide .icon-hyzx{
  color:#fff; display: block; font-size: 24rpx; text-indent: 40rpx; margin-top: 10rpx; height: 40rpx;line-height:40rpx;width:150rpx;
}

.booking-mark {
  height: 96rpx;
  width: 96rpx;
  border: 2rpx solid #f60;
  text-align: center;
  border-radius: 9rpx;
  position: relative;
}
.roomSurplus{font-size:22rpx; text-align: center; width: 100%; position: absolute; bottom: -35rpx;}

.room-mark {
  width: 100rpx;
  height: 30rpx;
  border-radius: 4rpx;
  background: #02b9c4;
  color: #fff;
  font-size: 18rpx;
  text-align: center;
  line-height: 30rpx;
}

.room-chooseDate {
  background: #fff;
  border-top: 2rpx solid #f3f3f3;
  border-bottom: 2rpx solid #f3f3f3;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  height: 100rpx;
  line-height: 60rpx;
}

.room-chooseDate .chooseDate {
  display: flex;
  justify-content: space-between;
}

.room-chooseDate .chooseDate .startDate {
  border-right: 1px solid #ddd;
  padding-right: 30rpx;
}

.endDate {
  padding-left: 28rpx;
}

.room-chooseDate .chooseDate .date {
  color: #000;
  font-size: 30rpx;
}

.room-chooseDate .chooseDate .week {
  color: #777;
  font-size: 22rpx;
  margin-left: 10rpx;
}


/* __ 图片预览弹窗(预览图).Start */
.mask{
  height: 100%;width: 100%; position: fixed;top: 0;left: 0;
  background: rgba(0,0,0,0.5);
  font-family: microsoft yahei,simhei;
  display:none;
}
.mask.cur{display: table;}
.mask-middle{
  display:table-cell; vertical-align:middle;
}
.alert-box {
  border-radius: 16rpx; margin: 0 auto; width: 615rpx !important;
  overflow: hidden; position: static !important;
}
.alert-box .hdTit{background: #fff; font-size: 32rpx; text-align: center; height: 80rpx; line-height: 80rpx; position: relative;}
.alert-box .hdTit .closeImgBox{position: absolute; top: 10rpx; right: 20rpx;}
/*轮播图*/
.alert-box swiper{
  width:615rpx;
  height:415rpx;
}
.alert-box swiper .slide-image{display: block; height: 100%; width: 100%;}

.alert-box .room-info{background:#fff; padding: 20rpx 50rpx;}
.alert-box .room-info .row{height: 50rpx;}
.alert-box .room-info .row text{flex: 1; color:#999; font-size: 24rpx;}

.alert-box .ft-btns{background: #fff; border-top: 1rpx solid #ddd; height: 80rpx;}
.alert-box .ft-btns .btn-order{background: #f60; color: #fff; font-size: 32rpx; text-align: center; padding: 0 30rpx; height: 80rpx; line-height: 80rpx; width: 100rpx;}
/* __ 图片预览弹窗(预览图).End */


