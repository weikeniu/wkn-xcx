/*右侧浮动字母*/
.panel-switchCity .floatLetter{
  background: #f8f8f8; color: #12b7f5; display: flex; flex-direction: column;
  font-size: 28rpx; font-family: Georgia; height: 100%; width: 50rpx; position: fixed; right: 0; z-index: 11;
}
.panel-switchCity .floatLetter view{display: flex; align-items: center; justify-content: center;}
/*字母提示*/
.showSelectedLetter{
  background: rgba(0,0,0,.5); border-radius: 10rpx; color: #fff; font-size: 32rpx; font-family: Georgia; display: flex; justify-content: center; align-items: center;
  margin: -50rpx; height: 100rpx; width: 100rpx; position: fixed; top: 50%; left: 50%; z-index: 12;
}
/*顶部返回-重置*/
.hd-nav{background: #fff; border-bottom: 1rpx solid rgba(50,50,50,.15); height: 90rpx;}
.hd-nav .icon_back{padding: 0 25rpx; position: relative;}
.hd-nav .icon_back:before{content: ""; border-right: 2rpx solid #999; border-bottom: 2rpx solid #999; height: 20rpx; width: 20rpx; position: absolute; left: 35rpx; top: 50%; transform: rotate(135deg) translate(0, 50%);}
.hd-nav .reset{color:#12b7f5;font-size: 28rpx; text-align: right; margin-right: 80rpx;}

/*当前城市(我的位置)*/
.current-city{background: #fff; padding: 20rpx;}
.current-city .tit{color: #999; font-size: 28rpx;}
.current-city .pos{border: 1rpx solid #666; border-radius: 3rpx; color: #000; display: inline-block; font-size: 28rpx; margin-top: 20rpx; text-align: center; padding: 0 20rpx; line-height: 50rpx; min-width: 115rpx;}
/*热门城市*/
.hot-city{background: #fff; padding: 20rpx;}
.hot-city .tit{color: #999; font-size: 28rpx;}
.hot-city .list{margin-top: 20rpx;}
.hot-city .row{border: 1rpx solid #666; border-radius: 3rpx; color: #000; display: inline-block; font-size: 28rpx; margin: 0 10rpx 10rpx 0; text-align: center; padding: 0 20rpx; line-height: 50rpx; width: 115rpx;}
/*城市列表*/
.selection-city .initial{border-top: 1rpx solid #ddd; border-bottom: 1rpx solid #ddd; font-size: 32rpx; padding: 10rpx 20rpx;}
.selection-city .item-city{background: #fff; font-size: 28rpx; padding: 10rpx 20rpx;}
