.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.textStyle {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.textContainer {
  margin-top: 200px;
}
.pay-top{
  height: 138rpx;
}
.border-copy{
  width: 100%;
  height: 5rpx;
  background-position: 0 0;
  background-repeat: repeat-x;
}
.food-num{
  min-width: 48rpx;
  font-size: 34rpx;
  line-height: 50rpx;
  text-align: center;
  display: none
}
.food-num.cur{
  display: block
}
.ar .icon-jianhao{
  display: none;
}
.ar .icon-jianhao.cur{
  display: block;
}
.la-lv{
  display: inline-block;
  /*width: 55rpx;
  height: 26rpx;
  background-size:55rpx 26rpx; */
}
.la-lv.lv1>text:nth-child(1){
  color: #f90
}
.la-lv.lv2>text:nth-child(2){
  color: #f60
}
.la-lv.lv3>text:nth-child(3){
  color: #f40
}
.fix-bottom{
  width: 100%;
  height: 120rpx;
  position: fixed;
  left: 0;
  bottom: 0;
}
.fix-bottom-show{
  width: 100%;
  height: 120rpx;
  border-top: 1rpx solid #f3f3f3;
  background: #fff;
  box-sizing: border-box;
}
.fix-bottom-btn{
  width: 260rpx;
  height: 120rpx;
  border: 0;
  color: #fff;
  background: #f40;
  border-radius: 0;
  line-height: 120rpx;
  text-align: center
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: none;
}
.fix-bottom .mask{
  height: calc(100vh - 100rpx);
  
}
.mask.cur{
  display: block;
}
.mask-inner{
  background: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}
.fix-bottom .icon-jianhao,.fix-bottom .food-num{
  display: block
}
.tip-ico{
  width: 20rpx;
  height: 20rpx;
  border:1rpx solid #999;
  color: #999;
  text-align: center;
  line-height: 20rpx;
  font-size: 14rpx;
  border-radius: 50%;
  display: inline-block;
  margin-right: 10rpx;
  position: relative;
  top: -5rpx;
}
.redpaper-list{
  max-height: 480rpx;
  box-sizing: border-box;
  
}
.radio-copy{
  width:46rpx;
  height: 46rpx;
  border: 1rpx solid #6e6e6e;
  border-radius: 50%;
  font-size: 23rpx;
  line-height: 46rpx;
  color: #fff;
  text-align: center;
}
.radio-copy.cur{
  border: 0;
  background: #12b7f5;
   width:47rpx;
  height: 47rpx;
}

