/* __ 备注信息 */
.sec-orderNote{background: #fff;}
.sec-orderNote .note-list .tit{font-size: 30rpx; padding: 10rpx 0 30rpx;}
.sec-orderNote .note-list .list text{
  border: 1rpx solid #e3e3e3; border-radius: 30rpx; color: #999; display: inline-block; font-size: 30rpx; 
  margin-bottom: 20rpx; margin-right: 20rpx; padding: 0 30rpx; line-height: 54rpx;
  transition: all .3s;
}
.sec-orderNote .note-list .list text.cur{border-color: #12b7f5; color: #12b7f5;}
.sec-orderNote .note-list .area-box{margin-top: 10rpx; position: relative;}
.sec-orderNote .note-list .area-box textarea{background: #f8f8f8; border-radius: 5rpx; box-sizing: border-box; font-size: 28rpx; padding: 20rpx 25rpx; min-height: 160rpx; width: 100%;}
.sec-orderNote .note-list .area-box .wordLimit{color: #999; font-size: 24rpx; position: absolute; right: 20rpx; bottom: 20rpx;}
.sec-orderNote .ft-btns{margin-top: 30rpx; padding: 0 20rpx; text-align: center;}
.sec-orderNote .ft-btns .ok{background: #12b7f5; border-radius: 10rpx; color: #fff; font-size: 32rpx; height: 100rpx; line-height: 100rpx;}
