/* __ 排名统计列表 */
.ws__rank-list .item{padding: 0 20rpx;}
.ws__rank-list .item .inner{display: flex; align-items: center; height: 80rpx;}
.ws__rank-list .item .title{color:#12b7f5;font-size: 28rpx; font-family: 宋体;}
.ws__rank-list .item .score{color:#12b7f5;font-size: 28rpx; font-family: 宋体;}
.ws__rank-list .item .icon-youx{font-size: 14px; margin-right: -5rpx;}
/*progress进度条*/
.ws__rank-list .item .progress{border-bottom: 1rpx solid rgba(50,50,50,.1); padding-bottom: 20rpx; position: relative; z-index: 1001;}
.ws__rank-list .item.top01 .title, .ws__rank-list .item.top01 .score{color:#ffa200;}
.ws__rank-list .item.top02 .title, .ws__rank-list .item.top02 .score{color:#49d232;}
.ws__rank-list .item.top03 .title, .ws__rank-list .item.top03 .score{color:#d462ff;}

